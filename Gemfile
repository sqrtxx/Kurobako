source 'https://rubygems.org'

# Base
gem 'rails', '4.1.7'

# Database
gem 'sqlite3'

# Rails Plugins
gem 'sass-rails', '~> 4.0.3'
gem 'slim-rails'
gem 'coffee-rails', '~> 4.0.0'
gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder', '~> 2.0'
